<h1>Burgers!</h1>

<h2>Burgers that are not Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgerPartial devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgerPartial devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devoured?</label><br>
    <input type="checkbox" name="devour" value="1" checked> devoured!<br>
    <input type="checkbox" name="devour" value="0"> not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
